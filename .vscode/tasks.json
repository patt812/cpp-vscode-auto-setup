{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with gcc",
            "type": "shell",
            "command": "/opt/homebrew/opt/gcc@12/bin/g++-12", 
            "args": [
                "-std=c++20",
                "-gdwarf-3",
                "${file}",
                "-o",
                "bin/a.out",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
